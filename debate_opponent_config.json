{
    "workers": [
        {
            "id": "a1b2c3d4-e5f6-7g8h-9i0j-1k2l3m4n5o6p",
            "name": "DebateRAGWorker",
            "path": "arklex.env.workers.debate_rag_worker.DebateRAGWorker",
            "description": "Selects debate topics and retrieves relevant arguments from Kialo",
            "config": {
                "topics": [
                    "Should artificial intelligence be regulated?",
                    "Is social media harmful to society?",
                    "Should genetic engineering be allowed?",
                    "Is universal basic income a good idea?",
                    "Should we colonize Mars?"
                ]
            }
        },
        {
            "id": "b2c3d4e5-f6g7-8h9i-0j1k-2l3m4n5o6p7q",
            "name": "ArgumentClassifier",
            "path": "arklex.env.workers.argument_classifier.ArgumentClassifier",
            "description": "Classifies user arguments into emotional, logical, or ethical categories",
            "config": {
                "categories": ["emotional", "logical", "ethical"],
                "confidence_threshold": 0.6
            }
        },
        {
            "id": "e7f8d9c0-b1a2-3d4e-5f6g-7h8i9j0k1l2m",
            "name": "PathosWorker",
            "path": "arklex.env.workers.persuasion_worker.PathosWorker",
            "description": "Generates emotional counter-arguments that appeal to feelings and values",
            "config": {
                "emotional_appeals": ["empathy", "values", "beliefs", "desires"],
                "effectiveness_threshold": 0.7
            }
        },
        {
            "id": "f8e9d0c1-b2a3-4e5f-6g7h-8i9j0k1l2m3n",
            "name": "LogosWorker",
            "path": "arklex.env.workers.persuasion_worker.LogosWorker",
            "description": "Generates logical counter-arguments that appeal to reason and facts",
            "config": {
                "logical_appeals": ["data", "statistics", "research", "evidence"],
                "effectiveness_threshold": 0.7
            }
        },
        {
            "id": "g9f0e1d2-c3b4-5f6g-7h8i-9j0k1l2m3n4o",
            "name": "EthosWorker",
            "path": "arklex.env.workers.persuasion_worker.EthosWorker",
            "description": "Generates ethical counter-arguments that appeal to credibility and character",
            "config": {
                "ethical_appeals": ["credibility", "authority", "character", "integrity"],
                "effectiveness_threshold": 0.7
            }
        },
        {
            "id": "h0g1f2e3-d4c5-6b7a-8i9j-0k1l2m3n4o5p",
            "name": "EffectivenessEvaluatorWorker",
            "path": "arklex.env.workers.effectiveness_evaluator.EffectivenessEvaluatorWorker",
            "description": "Evaluates the effectiveness of counter-arguments",
            "config": {
                "evaluation_criteria": [
                    "relevance",
                    "persuasiveness",
                    "credibility",
                    "emotional_impact"
                ],
                "min_effectiveness_score": 0.6
            }
        },
        {
            "id": "i1h2g3f4-e5d6-7c8b-9a0j-1k2l3m4n5o6p",
            "name": "DebateHistoryWorker",
            "path": "arklex.env.workers.debate_history_worker.DebateHistoryWorker",
            "description": "Tracks debate history and user preferences",
            "config": {
                "history_window": 10,
                "preference_weight": 0.8
            }
        }
    ],
    "tools": [
        {
            "id": "j2i3h4g5-f6e7-8d9c-0b1a-2k3l4m5n6o7p",
            "name": "WebSearchTool",
            "path": "arklex.env.tools.web_search.WebSearchTool",
            "description": "Searches the web for relevant information and facts",
            "config": {
                "max_results": 5,
                "timeout": 30
            }
        },
        {
            "id": "k3j4i5h6-g7f8-9e0d-1c2b-3l4m5n6o7p8q",
            "name": "FactCheckTool",
            "path": "arklex.env.tools.fact_check.FactCheckTool",
            "description": "Verifies facts and claims in arguments",
            "config": {
                "confidence_threshold": 0.8,
                "sources": ["reliable_database", "fact_checking_sites"]
            }
        },
        {
            "id": "l4k5j6i7-h8g9-0f1e-2d3c-4m5n6o7p8q9r",
            "name": "CitationTool",
            "path": "arklex.env.tools.citation.CitationTool",
            "description": "Generates and validates citations for arguments",
            "config": {
                "citation_format": "APA",
                "require_doi": true
            }
        }
    ],
    "metadata": {
        "description": "Configuration for a debate opponent AI that uses different persuasion strategies",
        "version": "1.0.0",
        "last_updated": "2024-03-20",
        "notes": "The persuasion workers (PathosWorker, LogosWorker, EthosWorker) are implementations of the PersuasionWorker base class, each specializing in a different type of argumentation."
    }
} 